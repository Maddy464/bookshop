{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4",
    "@cap-js/hana": "^2",
    "@sap/xssec": "^4",
    "@sap-cloud-sdk/connectivity": "^3",
    "@sap-cloud-sdk/http-client": "^3",
    "@sap-cloud-sdk/resilience": "^3"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-booksfiori": "cds watch --open booksfiori/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy bookshop --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-userdata": "cds watch --open userdata/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "db": "hana",
      "auth": "mocked",
      "GWSAMPLE": {
        "kind": "odata-v2",
        "model": "srv/external/GWSAMPLE",
         "credentials": {
           "destination": "ES5",
           "path": "/sap/opu/odata/IWBEP/GWSAMPLE_BASIC"
         }
      }

    }
  },
  "sapux": [
    "app/booksfiori"
  ]
}